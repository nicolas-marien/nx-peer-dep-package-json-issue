{
  "name": "@nx-eslint-dep-check-peer/backend",
  "version": "0.0.1",
  "private": true,
  "nx": {
    "name": "backend",
    "targets": {
      "esbuild-build": {
        "executor": "@nx/esbuild:esbuild",
        "outputs": [
          "{options.outputPath}"
        ],
        "dependsOn": [
          "^build"
        ],
        "options": {
          "platform": "node",
          "outputPath": "apps/backend/dist",
          "format": [
            "cjs"
          ],
          "bundle": true,
          "main": "apps/backend/src/main.ts",
          "tsConfig": "apps/backend/tsconfig.app.json",
          "sourceMap": true,
          "esbuildConfig": "apps/backend/esbuild.config.js"
        },
        "configurations": {
          "production": {
            "optimization": true,
            "extractLicenses": true,
            "inspect": false,
            "fileReplacements": []
          }
        }
      },
      "build": {
        "executor": "nx:run-commands",
        "options": {
          "command": "webpack-cli build",
          "args": [
            "--node-env=production"
          ],
          "cwd": "apps/backend"
        },
        "configurations": {
          "development": {
            "args": [
              "--node-env=development"
            ]
          }
        }
      },
      "prune-lockfile": {
        "cache": true,
        "executor": "@nx/js:prune-lockfile",
        "outputs": [
          "{workspaceRoot}/apps/backend/dist/package.json",
          "{workspaceRoot}/apps/backend/dist/yarn.lock"
        ],
        "options": {
          "buildTarget": "build"
        }
      },
      "copy-workspace-modules": {
        "cache": true,
        "outputs": [
          "{workspaceRoot}/apps/backend/dist/workspace_modules"
        ],
        "executor": "@nx/js:copy-workspace-modules",
        "options": {
          "buildTarget": "build"
        }
      },
      "prune": {
        "dependsOn": [
          "prune-lockfile",
          "copy-workspace-modules"
        ],
        "executor": "nx:noop"
      },
      "serve": {
        "continuous": true,
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "@nx-eslint-dep-check-peer/backend:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "@nx-eslint-dep-check-peer/backend:build:development"
          },
          "production": {
            "buildTarget": "@nx-eslint-dep-check-peer/backend:build:production"
          }
        }
      }
    }
  },
  "dependencies": {
    "@nestjs/common": "^11.0.0",
    "@nestjs/core": "^11.0.0",
    "tslib": "^2.3.0",
    "@anatine/esbuild-decorators": "0.2.19",
    "@nx-eslint-dep-check-peer/buildable-logger": "0.0.1",
    "@nx/webpack": "22.0.2",
    "jsonc-eslint-parser": "2.4.1",
    "nestjs-pino": "4.4.1"
  },
  "devDependencies": {
    "@nestjs/testing": "^11.0.0"
  }
}
